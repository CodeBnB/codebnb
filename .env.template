# Code Marketplace Environment Configuration Template
# ====================================================
# SAFE TO COMMIT TO GIT - Contains no real secrets
# ====================================================
#
# Setup Instructions:
# 1. Copy this file to .env
# 2. Replace all PLACEHOLDER values with real credentials
# 3. Never commit the real .env file to git
#
# Generate secure secrets:
# JWT_SECRET: openssl rand -base64 32
# SESSION_SECRET: openssl rand -base64 32
# DB_PASSWORD: openssl rand -base64 16 (or use your hosting provider's generator)
#

# Application Environment
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=PLACEHOLDER_DB_HOST
DB_PORT=5432
DB_NAME=PLACEHOLDER_DB_NAME
DB_USER=PLACEHOLDER_DB_USER
DB_PASSWORD=PLACEHOLDER_DB_PASSWORD
DB_SSL=false

# JWT Authentication
JWT_SECRET=PLACEHOLDER_JWT_SECRET
JWT_EXPIRES_IN=24h

# Session Management
SESSION_SECRET=PLACEHOLDER_SESSION_SECRET

# Stripe Payment Processing
STRIPE_PUBLIC_KEY=PLACEHOLDER_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=PLACEHOLDER_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=PLACEHOLDER_STRIPE_WEBHOOK_SECRET
MARKETPLACE_FEE_PERCENT=1.0

# Email Service (SendGrid)
EMAIL_API_KEY=PLACEHOLDER_EMAIL_API_KEY
EMAIL_FROM=noreply@yourmarketplace.com
EMAIL_FROM_NAME=Code Marketplace

# Email Templates (SendGrid Dynamic Template IDs)
EMAIL_WELCOME_TEMPLATE=PLACEHOLDER_WELCOME_TEMPLATE_ID
EMAIL_PURCHASE_TEMPLATE=PLACEHOLDER_PURCHASE_TEMPLATE_ID
EMAIL_SALE_TEMPLATE=PLACEHOLDER_SALE_TEMPLATE_ID

# Redis Configuration (for sessions, caching, job queues)
REDIS_HOST=PLACEHOLDER_REDIS_HOST
REDIS_PORT=6379
REDIS_PASSWORD=PLACEHOLDER_REDIS_PASSWORD
REDIS_DB=0

# File Storage
STORAGE_TYPE=local
# Local storage settings
UPLOADS_PATH=./uploads
MAX_FILE_SIZE=52428800
# S3 settings (if using S3)
S3_BUCKET=PLACEHOLDER_S3_BUCKET
S3_REGION=PLACEHOLDER_S3_REGION
S3_ACCESS_KEY=PLACEHOLDER_S3_ACCESS_KEY
S3_SECRET_KEY=PLACEHOLDER_S3_SECRET_KEY

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILENAME=marketplace.log

# Development Settings
ENABLE_SWAGGER=true
MOCK_PAYMENTS=false
SEED_DATABASE=false
BYPASS_EMAIL_VERIFICATION=false

# Health Check Settings
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_DB=true
HEALTH_CHECK_REDIS=true

# SSL/TLS (for production)
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Rate Limiting per User
USER_RATE_LIMIT_WINDOW=3600000
USER_RATE_LIMIT_MAX=1000

# File Upload Security
ALLOWED_FILE_EXTENSIONS=.zip,.tar.gz,.js,.php,.html,.css,.json,.py,.rb,.go
QUARANTINE_UPLOADS=true
SCAN_UPLOADS=false

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# External APIs (if needed)
EXTERNAL_API_KEY=PLACEHOLDER_EXTERNAL_API_KEY
EXTERNAL_API_URL=https://api.example.com

# Monitoring and Analytics
ANALYTICS_KEY=PLACEHOLDER_ANALYTICS_KEY
ERROR_REPORTING_KEY=PLACEHOLDER_ERROR_REPORTING_KEY

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_REVIEWS=true
FEATURE_MESSAGING=true
FEATURE_ANALYTICS=true
FEATURE_API_ACCESS=false

# Social Login (if implementing)
GOOGLE_CLIENT_ID=PLACEHOLDER_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=PLACEHOLDER_GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=PLACEHOLDER_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=PLACEHOLDER_GITHUB_CLIENT_SECRET

# ====================================================
# SECURITY REMINDERS:
# - Never commit the real .env file
# - Use strong, unique passwords
# - Rotate secrets regularly
# - Enable 2FA on all service accounts
# - Use least-privilege access principles
# - Monitor for unauthorized access
# ====================================================
